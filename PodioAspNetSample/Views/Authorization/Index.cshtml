@model PodioAspNetSample.ViewModels.UsernamePasswordAuthenticationViewModel
@{
    ViewBag.Title = "Authentication";
}
<div class="bs-docs-section">
   @{
       if (ViewBag.error != null)
       {
            <div class="alert alert-danger fade in">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <p>@ViewBag.error</p>
            </div>
       }
   }
    <div class="row">
        <div class="col-lg-6">
            <div class="well bs-component">
                @using (Html.BeginForm("UsernamePasswordAuthentication", "Authorization", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                   @Html.AntiForgeryToken()
                   <fieldset>
                        <legend>Username and password flow</legend>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Username, new { @class = "col-lg-2 control-label" })
                            <div class="col-lg-10">
                                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Username" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, new { @class = "col-lg-2 control-label" })
                            <div class="col-lg-10">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-10 col-lg-offset-2">
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        </div>
                    </fieldset> 
                }
                    
            </div>
        </div>
        <div class="col-lg-6">
            <div class="well bs-component">
               @using (Html.BeginForm("ServerSideAuthentication", "Authorization", FormMethod.Post, new { @class = "form-horizontal" }))
               {
                  <fieldset>
                        <legend>Server side flow</legend>
                        <div class="form-group">
                            <div class="col-lg-10 col-lg-offset-1 box_margin">
                                <button type="submit" class="btn btn-success btn-lg btn-block">Sign In with Podio</button>
                            </div>
                        </div>
                    </fieldset> 
               }                    
            </div>
        </div>
    </div>
    </div>
